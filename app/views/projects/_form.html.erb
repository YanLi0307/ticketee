<%= form_for(@project) do |f| %>
  <% if @project.errors.present? %>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
     </ul> 
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p> 
  <p>
    <%= f.label :description %><br>
    <% f.text_area :description, :rows => 3 %>
  </p>
  <%= f.submit %>
<% end %>